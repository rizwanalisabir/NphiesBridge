@{
    ViewData["Title"] = "ICD-10 Code Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="mapping-container mx-auto" style="max-width: 1400px;">
        <!-- Header -->
        <div class="mapping-header">
            <h2 class="fw-bold mb-2">AI-Powered ICD-10 Code Mapping</h2>
            <p class="mb-0 opacity-75">Matching your hospital codes with NPHIES standards using advanced AI</p>
        </div>

        <!-- Progress Overview -->
        <div class="progress-overview">
            <div class="progress-stats">
                <div class="stat-item">
                    <div class="stat-number" id="completedCount">0</div>
                    <div class="stat-label">Completed</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="processingCount">0</div>
                    <div class="stat-label">Processing</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="pendingCount">0</div>
                    <div class="stat-label">Pending</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" id="totalCount">0</div>
                    <div class="stat-label">Total</div>
                </div>
            </div>
            <div class="overall-progress">
                <div class="overall-progress-fill" id="overallProgress" style="width: 0%"></div>
            </div>
            <div class="text-center mt-3">
                <small class="text-muted fw-medium">
                    <span id="progressText">Initializing AI matching engine...</span>
                </small>
            </div>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden"></span>
            </div>
            <div class="mt-3">
                <h5>Loading session data...</h5>
                <p class="text-muted">Please wait while we prepare your hospital codes for mapping.</p>
            </div>
        </div>

        <!-- Mapping Rows Container (will be populated by JavaScript) -->
        <div id="mappingRows" style="display: none;">
            <!-- Rows will be dynamically generated here -->
        </div>
    </div>

    <!-- Enhanced Control Panel -->
    <div class="control-panel">
        <div class="control-header">
            <i data-lucide="settings" style="width: 16px; height: 16px; margin-right: 0.5rem;"></i>
            Mapping Controls
        </div>
        <div class="control-buttons">
            @* <button class="control-btn btn-pause" onclick="pauseProcessing()" disabled>
                <i data-lucide="pause" style="width: 18px; height: 18px;"></i>
                Pause/Resume Processing (Soon)
            </button> *@
            <button class="control-btn btn-approve-all" onclick="approveAll()">
                <i data-lucide="check-circle" style="width: 18px; height: 18px;"></i>
                Approve All High Match
            </button>
            <button class="control-btn btn-export" onclick="exportResults()">
                <i data-lucide="download" style="width: 18px; height: 18px;"></i>
                Export Final Mappings
            </button>
        </div>
    </div>
</div>


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Pass minimal data to JavaScript - it will load the rest
            window.mappingData = {
                sessionId: '@Model.SessionId',
                apiUrls: {
                    baseUrl: '@ViewBag.ApiBaseUrl'
                }
            };

            // Initialize Lucide icons
            if (typeof lucide !== 'undefined') {
                lucide.createIcons();
            }

            // Start the mapping process
            initializeMappingProcess();
        });
    </script>
