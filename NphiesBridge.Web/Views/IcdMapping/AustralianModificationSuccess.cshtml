@{
    ViewData["Title"] = "ICD-10-AM Setup Complete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-10">
            <div class="success-card">
                <div class="success-icon">
                    <i data-lucide="check-circle-2"></i>
                </div>

                <h2 class="success-title">Perfect! You're All Set!</h2>
                <p class="success-subtitle">
                    Your healthcare facility is using Australian Modification (ICD-10-AM),
                    which is the same system used by NPHIES.
                </p>

                <div class="benefits-grid">
                    <div class="benefit-item">
                        <div class="benefit-icon">
                            <i data-lucide="zap"></i>
                        </div>
                        <h4>Instant Compatibility</h4>
                        <p>No code mapping required - direct integration with NPHIES</p>
                    </div>

                    <div class="benefit-item">
                        <div class="benefit-icon">
                            <i data-lucide="shield-check"></i>
                        </div>
                        <h4>100% Accuracy</h4>
                        <p>Zero translation errors - your codes work perfectly</p>
                    </div>

                    <div class="benefit-item">
                        <div class="benefit-icon">
                            <i data-lucide="clock"></i>
                        </div>
                        <h4>Ready to Go</h4>
                        <p>Start validating claims immediately</p>
                    </div>
                </div>

                <div class="next-steps ns">
                    <div class="card-action" onclick="@Url.Action("Index", "Home")">
                        <i data-lucide="home"></i>
                        <span class="btn-text">
                                Return to Dashboard
                        </span>
                    </div>
                    <div class="card-action border" onclick="@Url.Action("TestIntegration")">
                        <i data-lucide="play-circle"></i>
                        <span class="btn-text">
                                Test Integration
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    });
</script>