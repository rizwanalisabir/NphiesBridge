@{
    ViewData["Title"] = "Service Codes Mapping Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/icd-mapping.css" rel="stylesheet" />
<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <div class="mapping-header">
                <h2 class="display-5 fw-bold text-white mb-3">Service Codes Mapping Setup</h2>
                <hr />
                <p class="lead text-muted mb-0">Let's map your hospital's service codes to NPHIES standards</p>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-11">

            <!-- Step 1: Download Template -->
            <div class="setup-card mb-4" id="step1">
                <div>
                    <span class="step-number-big">1</span>
                </div>

                <div class="row align-items-center">
                    <div class="col-lg-4 mb-4 mb-lg-0">
                        <div class="step-info">
                            <h3 class="h4 fw-bold text-dark mb-2">Download Excel Template</h3>
                            <p class="text-muted mb-0">Get our pre-formatted template to upload your Service Codes</p>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <div class="template-preview-card">
                            <h5 class="fw-semibold mb-3 text-muted">Template Structure <span class="fs-10"> (5 Columns included in excel template)</span></h5>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="column-card">
                                        <div class="column-header">
                                            <i data-lucide="hash" class="column-icon"></i>
                                            <span class="column-name">ItemId</span>
                                        </div>
                                        <p class="column-desc">Optional - Your internal item identifier</p>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="column-card required">
                                        <div class="column-header">
                                            <i data-lucide="link-2" class="column-icon"></i>
                                            <span class="column-name">ItemRelation</span>
                                        </div>
                                        <p class="column-desc">Required - Unique key used for mapping</p>
                                    </div>
                                </div>

                                <div class="col-md-6 mt-2">
                                    <div class="column-card">
                                        <div class="column-header">
                                            <i data-lucide="file-badge" class="column-icon"></i>
                                            <span class="column-name">Name</span>
                                        </div>
                                        <p class="column-desc">Recommended - Used for AI suggestions</p>
                                    </div>
                                </div>

                                <div class="col-md-6 mt-2">
                                    <div class="column-card">
                                        <div class="column-header">
                                            <i data-lucide="fingerprint" class="column-icon"></i>
                                            <span class="column-name">NPHIESCode</span>
                                        </div>
                                        <p class="column-desc">Optional - Prefill if already known</p>
                                    </div>
                                </div>

                                <div class="col-md-6 mt-2">
                                    <div class="column-card">
                                        <div class="column-header">
                                            <i data-lucide="file-text" class="column-icon"></i>
                                            <span class="column-name">NPHIESDescription</span>
                                        </div>
                                        <p class="column-desc">Optional - Extra context</p>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-3">
                                <a class="btn btn-success px-4 py-2" href="@Url.Action("DownloadTemplate", "ServiceCodesMapping")">
                                    <i class="zmdi zmdi-download me-1"></i> DOWNLOAD EXCEL TEMPLATE
                                </a>
                                <div class="mt-2 small text-muted">
                                    The template includes sample data to guide you
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Step 2: Upload Template -->
            <div class="setup-card mb-4" id="step2">
                <div>
                    <span class="step-number-big">2</span>
                </div>

                <div class="row align-items-center">
                    <div class="col-lg-4 mb-4 mb-lg-0">
                        <div class="step-info">
                            <h3 class="h4 fw-bold text-dark mb-2">Upload and Start Mapping</h3>
                            <p class="text-muted mb-0">Upload your filled template to begin AI-assisted mapping</p>
                        </div>
                    </div>

                    <div class="col-lg-8">
                        <form id="svc-upload-form" asp-action="UploadExcel" asp-controller="ServiceCodesMapping" method="post" enctype="multipart/form-data">
                            <div class="upload-card">
                                <div class="upload-area">
                                    <input type="file" class="form-control" id="file" name="file" accept=".xlsx,.xls" required />
                                    <small class="form-text text-muted">Only .xlsx or .xls files are supported</small>
                                </div>
                                @Html.AntiForgeryToken()
                                <button type="submit" id="svc-upload-btn" class="btn btn-primary mt-3">
                                    <span class="btn-text">Create Mapping Session</span>
                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                </button>
                            </div>
                        </form>
                        <div id="svc-upload-msg" class="mt-3"></div>
                    </div>
                </div>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">@TempData["Message"]</div>
            }
        </div>
    </div>
</div>

<script src="~/js/service-codes-mapping.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            if (typeof lucide !== 'undefined') { lucide.createIcons(); }
        });
    </script>
