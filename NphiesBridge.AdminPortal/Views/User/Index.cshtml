@model List<NphiesBridge.Shared.DTOs.UserResponseDto>
@{
    ViewBag.Title = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">User Management</h5>
        <a href="javascript:void(0);" class="btn btn-sm btn-primary"
           onclick="openModal('Add New User', '@Url.Action("Create", null)')">
            <i class="zmdi zmdi-account-add mr-1"></i> Add New User
        </a>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Health Provider</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge badge-danger">Admin</span>
                                }
                                else
                                {
                                    <span class="badge badge-info">Provider</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.HealthProviderName))
                                {
                                    <span class="text-muted">@user.HealthProviderName</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <small class="text-muted">@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </td>
                            <td>
                                <a href="javascript:void(0);" class="btn btn-sm btn-info"
                                   onclick="openModal('Edit User', '@Url.Action("Edit", new { id = user.Id })')"
                                   title="Edit User">
                                    <i class="zmdi zmdi-edit"></i>
                                </a>
                                <a href="javascript:void(0);" class="btn btn-sm btn-danger ml-1"
                                   onclick="openModal('Delete User', '@Url.Action("Delete", new { id = user.Id })')"
                                   title="Delete User">
                                    <i class="zmdi zmdi-delete"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="zmdi zmdi-accounts" style="font-size: 4rem; color: #ccc;"></i>
                <h5 class="text-muted mt-3">No Users Found</h5>
                <p class="text-muted">Click "Add New User" to create your first user account.</p>
                <a href="javascript:void(0);" class="btn btn-primary mt-2"
                   onclick="openModal('Add New User', '@Url.Action("Create", null)')">
                    <i class="zmdi zmdi-account-add mr-1"></i> Add New User
                </a>
            </div>
        }
    </div>
</div>